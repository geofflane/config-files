# vim: set filetype=sh:

export EDITOR='vim'
# We've got mvim aliased to gvim in darwin too
export VISUAL='gvim'

if [[ $OSTYPE =~ ^darwin ]]; then
  export PGDATA=/usr/local/var/postgres
  export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_111.jdk/Contents/Home
fi

if [[ -d ~/.cabal ]]; then
  export PATH=~/.cabal/bin:$PATH
fi

export EXENV_DIR=~/.exenv
export NVM_DIR=~/.nvm

export PATH=$EXENV_DIR/bin:$NVM_DIR/bin:/usr/local/sbin:$PATH
