[settings]
; Limit the amount of events sent to lemonbar within a set timeframe:
; - "Allow <throttle_limit> updates within <throttle_ms> of time"
; Default values:
;throttle_limit = 5
;throttle_ms = 50

[colors]
;fg = ${xrdb:color7}
;bg = ${xrdb:color0}

foreground = ${xrdb:color7:#DDDDDD}
background = ${xrdb:color0:#111111}

black = ${xrdb:color0}
red = ${xrdb:color1}
green = ${xrdb:color2}
yellow = ${xrdb:color3}
blue = ${xrdb:color4}
magenta = ${xrdb:color5}
cyan = ${xrdb:color6}
white = ${xrdb:color7}

bg = ${xrdb:color0}
fg = ${xrdb:color7}

; xrandr -q | grep " connected" | cut -d ' ' -f1
[bar/mainBar]
monitor = Virtual1
top = true
override-redirect = true

width = 1440
height = 21

offset-x = 0
offset-y = 0

foreground = ${colors.fg}
background = ${colors.bg}

border-left-size = 4
border-right-size = 4
border-bottom-size = 4
border-color = ${colors.fg}

spacing = 1
lineheight = 3

padding-left = 2
padding-right = 2

font-0 = DejaVu Sans Mono for Powerline:size=8
font-1 = Font Awesome 5 Free:style=Regular:size=8
font-2 = Font Awesome 5 Free:style=Solid:size=8

modules-left = bspwm
;modules-right = mpd sep volume sep ram sep cpu cputemp sep gpu gputemp
modules-right = sep volume sep ram sep cpu cputemp
modules-center = date time

wm-restack = bspwm

[bar/secondBar]
inherit = bar/mainBar

monitor = DVI-D-0

width = 1880

modules-left = bspwm
modules-center = date time
modules-right = 

tray-position = right

[module/sep]
type = custom/script
exec = echo " | "
format-padding = 1

[module/cpu]
type = internal/cpu
; label =  %percentage%%
label =  %percentage:3:3%%
format-padding = 1

[module/cputemp]
type = custom/script
exec = ~/bin/cpuTemp.sh
tail = false
interval = 10
format-padding = 1

[module/ram]
type = internal/memory
label =  %percentage_used:3:3%%
format-padding = 1

[module/gpu]
